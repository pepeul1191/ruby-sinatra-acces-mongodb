<div class="container my-2">
  <h2 class="mb-4 subtitle">Gesti√≥n de Sistemas</h2>
  <% if status %>
    <div class="alert alert-<%=status == 'success' ? 'success' : 'danger'%>" role="alert">
      <%= message %>
    </div>
  <% end %>
  <a href="/systems/create" class="btn btn-success"><i class="fa fa-plus icon-left-margin" aria-hidden="true"></i> Agregar Sistema</a>
  <table class="table table-bordered table-striped" style="margin-top: 20px;">
    <thead class="table-dark">
      <tr>
        <th>Nombre</th>
        <th>Creado</th>
        <th>Actualizado</th>
        <th>Operaciones</th>
      </tr>
    </thead>
    <tbody>
      <% systems.each_with_index do |system, index| %>
        <tr>
          <td><%= system.name %></td>
          <td><%= system.created.strftime('%Y-%m-%d %H:%M:%S') %></td>
          <td><%= system.updated&.strftime('%Y-%m-%d %H:%M:%S') || 'No actualizado' %></td>
          <td>
            <a href="<%= system.repo %>" class="btn btn-secondary" target="_blank"><i class="fa fa-github icon-left-margin" aria-hidden="true"></i>Repositorio</a>
            <a href="<%= system.repo %>" class="btn btn-secondary"><i class="fa fa-users icon-left-margin" aria-hidden="true"></i>Usuarios</a>
            <a href="<%= system.repo %>" class="btn btn-secondary"><i class="fa fa-list icon-left-margin" aria-hidden="true"></i>Roles y Permisos</a>
            <a href="/systems/edit/<%=system.id%>" class="btn btn-secondary"><i class="fa fa-pencil icon-left-margin" aria-hidden="true"></i>Editar</a>
            <a href="/systems/delete/<%=system.id%>" class="btn btn-danger"><i class="fa fa-times" aria-hidden="true"></i>Eliminar</a>
          </td>
        </tr>
      <% end %>
    </tbody>
    <tfoot>
      <tr>
        <td colspan="4">
          <span class="pagination-buttons">
            <% if page != 1 %> 
              <a href="/systems?page=1"><i class="fa fa-angle-double-left footer-icon pagination-btn" aria-hidden="true"></i></a>
              <a href="/systems?page=<%=page-1%>"><i class="fa fa-angle-left footer-icon pagination-btn" aria-hidden="true"></i></a>
            <% end %>
            <label class="pagination-number"><%= page %> / <%= total_pages %></label>
            <% if page != total_pages %> 
              <a href="/systems?page=<%= total_pages %>"><i class="fa fa-angle-right footer-icon pagination-btn" aria-hidden="true"></i></a>
              <a href="/systems?page=<%=page+1%>"><i class="fa fa-angle-double-right footer-icon pagination-btn" aria-hidden="true"></i></a>
            <% end %>
          </span>
        </td>
      </tr>
    </tfoot>
  </table>
</div>